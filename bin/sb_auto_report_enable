#!/bin/bash
# https://github.com/sammtcbn/advutil
# just for south-bound
# Written by sammtcbn 2019.11.5
ME=$(basename $0)
MQTTIP=localhost
HANDLER="OPCUAClient"
INTERVAL=10

USAGE_STR="$(cat <<EOF
Usage: ${ME} [OPTION]...

OPTIONS
  -i <MQTT_IP>
      assign MQTT Broker ip, default is ${MQTTIP}

  -a <HANDLER>
      default is ${HANDLER}

  -s <INTERVAL>
      assign auto report interval (second) , default is ${INTERVAL}

  -h  display this help and exit

EOF
)"

function usage()
{
    echo "$USAGE_STR"
    exit 0
}

while getopts "a:i:s:h" opt; do
    case $opt in
    a)
       HANDLER=$OPTARG
       ;;
    h)
       usage
       ;;
    i)
       MQTTIP=$OPTARG
       ;;
    s)
       INTERVAL=$OPTARG
       ;;
    esac
done

TOPIC="/cagent/admin/${HANDLER}/agentcallbackreq"

PAYLOAD="$(cat <<-EOF
{
  "susiCommData": {
      "commCmd": 2053,
      "requestItems": {
          "All": {}
      },
      "autoUploadIntervalSec": ${INTERVAL},
      "handlerName": "general"
  }
}
EOF
)"


mosquitto_pub -h ${MQTTIP} -t ${TOPIC} -d -m "${PAYLOAD}"
if [ $? != 0 ]; then
    usage
fi
