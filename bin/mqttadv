#!/bin/bash
# https://github.com/sammtcbn/advutil
# Written by sammtcbn 2019.11.5

# support 5 favorite ip , edit ~/.config/.mqttadv , content as below:
# 172.22.12.228
# 172.22.12.72

function usage()
{
    ME=$(basename $0)
    echo "Usage: ${ME} [-f ip] [-d devid]"
    exit 0
}

function load_favorite_ip()
{
    CFG=~/.config/.mqttadv
    if [ -f ${CFG} ]; then
        HOST1=`awk '{if(NR==1) print $0}' ${CFG}`
        HOST2=`awk '{if(NR==2) print $0}' ${CFG}`
        HOST3=`awk '{if(NR==3) print $0}' ${CFG}`
        HOST4=`awk '{if(NR==4) print $0}' ${CFG}`
        HOST5=`awk '{if(NR==5) print $0}' ${CFG}`
    fi
}

function load_advpaasdev() {
    CFGFILE=~/.config/.advpaasdev
    if [ -f ${CFGFILE} ]; then
        IP=`cat ${CFGFILE} | grep IP= | awk 'BEGIN {FS="="}; {print $2}'`
        ID=`cat ${CFGFILE} | grep ID= | awk 'BEGIN {FS="="}; {print $2}'`
        PW=`cat ${CFGFILE} | grep PW= | awk 'BEGIN {FS="="}; {print $2}'`
    fi
}

function reset()
{
    IP=localhost
    ID=
    PW=
    devid=
    bound=0
    topic=#
}

function cal_topic()
{
    if [ -z "${devid}" ]; then
        topic=#
        return
    fi

    if [ "${bound}" == "s" ]; then
        topic="/cagent/admin/${devid}/#"
    elif [ "${bound}" == "n" ]; then
        topic="/wisepaas/+/${devid}/#"
    fi
}

function showmenu()
{
    clear
    echo "broker ip = ${IP}"
    echo "broker id = ${ID}"
    echo "broker pw = ${PW}"
    echo "devid     = ${devid}"
    echo "bound     = ${bound}"
    echo "topic     = ${topic}"
    echo ""
    echo "8) load broker setting from advpaasdev"
    echo "b) assign bound"
    echo "d) assign devid"
    echo "i) assign ip"
    echo "j) assign ip/devid for esvmsl"
    echo "k) assign ip/devid for pc041007"
    echo "l) assign ip/devid for esvm-win10"

    if [ ! -z "${HOST1}" ]; then
        echo "1) assign ip to ${HOST1}"
    fi

    if [ ! -z "${HOST2}" ]; then
        echo "2) assign ip to ${HOST2}"
    fi

    if [ ! -z "${HOST3}" ]; then
        echo "3) assign ip to ${HOST3}"
    fi

    if [ ! -z "${HOST4}" ]; then
        echo "4) assign ip to ${HOST4}"
    fi

    if [ ! -z "${HOST5}" ]; then
        echo "5) assign ip to ${HOST5}"
    fi

    echo "r) reset"
    echo "g) go"
    echo "q) quit"
    read -p "Choose: " choice
}

reset

while getopts "i:d:" opt; do
    case $opt in
    i)
       IP=$OPTARG
       ;;
    d)
       devid=$OPTARG
       ;;
    esac
done

while :
do
    load_favorite_ip
    cal_topic
    showmenu
    case $choice in
        1)
            if [ ! -z "${HOST1}" ]; then
              IP=${HOST1}
            fi
            ;;
        2)
            if [ ! -z "${HOST2}" ]; then
              IP=${HOST2}
            fi
            ;;
        3)
            if [ ! -z "${HOST3}" ]; then
              IP=${HOST3}
            fi
            ;;
        4)
            if [ ! -z "${HOST4}" ]; then
              IP=${HOST4}
            fi
            ;;
        5)
            if [ ! -z "${HOST5}" ]; then
              IP=${HOST5}
            fi
            ;;
        8)
            load_advpaasdev
            ;;
        b)
           read -p "New bound [0/s/n] " bound
           ;;
        d)
           read -p "New devid: " devid
           ;;
        i)
           read -p "New IP: " IP
           ;;
        j)
           IP=esvmsl
           devid=00000001-0000-0000-0000-5254004BAD5F
           ;;
        k)
           IP=pc041007
           devid=00000001-0000-0000-0000-305A3A750CCA
           ;;
        l)
           IP=esvm-win10
           devid=00000001-0000-0000-0000-525400622D01
           ;;
        g)
           break
           ;;
        q)
            exit 0
            ;;
        r)
            reset
            ;;
    esac
done

cal_topic
mqtt-show-msg --topic=${topic} --ip=${IP} --username=${ID} --password=${PW}
