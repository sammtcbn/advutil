function f_ess()
{
myclone https://gitlab.edgecenter.io/eiss_cloud_solution_team/node-red.git
myclone https://gitlab.edgecenter.io/EIoT_Enabling_Team/FaceView/faceview_installer.git
}

function f_personal()
{
myclone https://gitlab.edgecenter.io/Sam35.Lin/advsc_local_unlock_str.git
myclone https://gitlab.edgecenter.io/Sam35.Lin/e2i_plugin_config.git
myclone https://gitlab.edgecenter.io/Sam35.Lin/e2i-pack.git
