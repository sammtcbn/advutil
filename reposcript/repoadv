}

function f_github()
{
myclone https://github.com/ADVANTECH-Corp/WiseSnail.git
myclone https://github.com/ADVANTECH-Corp/agentlite.git
myclone https://github.com/ADVANTECH-Corp/APIGateway.git
}

function f_all()
{
f_ag
f_dss
f_es
f_esopen
f_ess
f_github
f_personal
}

if [ -z "${1}" ]; then
    usage
fi

for opt in $@
do
    case $opt in
      ag)     f_ag;;
      dss)    f_dss;;
      es)     f_es;;
      esopen) f_esopen;;
      ess)    f_ess;;
      github) f_github;;
      personal) f_personal;;
      all)    f_all;;
    esac
done
